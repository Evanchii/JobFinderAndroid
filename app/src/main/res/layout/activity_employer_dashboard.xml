<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome User!"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="16dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/empDash_decorTxt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Posted Jobs"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/empDash_decorCard1"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_below="@id/empDash_decorTxt1"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="65dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/empDash_decorImg1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:background="#ffe8ebf8"
                                android:padding="16dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ic_briefcase"
                                app:tint="#ff3c55bb" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/empDash_txtJobNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/empDash_decorTxt1"
                            android:layout_alignBottom="@+id/empDash_decorCard1"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_toEndOf="@id/empDash_decorCard1"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="0"
                            android:textColor="@color/Navy"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="16dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/empDash_decorTxt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Applicants"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/empDash_decorCard2"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_below="@id/empDash_decorTxt2"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="65dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/empDash_decorImg2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:background="#ffe7f3e9"
                                android:padding="16dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ic_users"
                                app:tint="#ff45a04e" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/empDash_txtApplicantNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/empDash_decorTxt2"
                            android:layout_alignBottom="@+id/empDash_decorCard2"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_toEndOf="@id/empDash_decorCard2"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="0"
                            android:textColor="@color/Navy"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="16dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/empDash_decorTxt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Scheduled for Interview"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/empDash_decorCard3"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_below="@id/empDash_decorTxt3"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="65dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/empDash_decorImg3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:background="#fffff3df"
                                android:padding="16dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ic_calendar"
                                app:tint="#ffff9900" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/empDash_txtSOINum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/empDash_decorTxt3"
                            android:layout_alignBottom="@+id/empDash_decorCard3"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_toEndOf="@id/empDash_decorCard3"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="0"
                            android:textColor="@color/Navy"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFF"

        app:headerLayout="@layout/header"
        app:itemShapeFillColor="@color/navigation_item_background"
        app:itemTextColor="@color/black"
        app:menu="@menu/employer_hamburger_menu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>