<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemNotif_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/itemNotif_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_information"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/itemNotif_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/itemNotif_icon"
            android:text="HH:MM AA"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/itemNotif_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemNotif_title"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_toEndOf="@id/itemNotif_icon"
            android:text="This is a message"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/itemNotif_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="MM/DD"
            android:textColor="#000000" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>